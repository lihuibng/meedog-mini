/* pages/message/group/index.wxss */

.active {
    animation: sa 0.5s ease;
}

.flex {
    display: flex;
    flex-direction: row;
    margin: 9px;
}

@keyframes sa {
    10% {
        transform: scale(1);
    }
    60% {
        transform: scale(1.4);
    }
    100% {
        transform: scale(1);
    }
}

.share-btn {
    display: flex;
    padding-bottom: 0;
    background-color: white;
    padding-top: 0;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.author-info {
    display: flex;
    flex-direction: row;
    margin: 10rpx 9px;
    align-items: center;
}

.author-info text {
    padding-left: 15rpx;
}

.author-info .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.name-time {
    display: flex;
    flex-direction: column;
    margin-left: 4px;
    font-size: 30rpx;
}

.name-time view {
    padding-top: 5rpx;
    font-size: 22rpx;
    color: gray;
}

.share-content {
    width: 96%;
    margin: 15px 9px;
}

.share-picture {
    display: inline-block;
    text-align: center;
}

.share-picture image {
    width: 95%;
    height: 95%;
}

.btn {
    margin: 9px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding-top: 4px;
    line-height: 25px;
    border-top: 1rpx solid rgb(235, 235, 235);
}

.btn .btn-item {
    width: 33%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    line-height: 25px;
}

.btn .btn-item view {
    padding-left: 3px;
    color: rgb(51, 51, 51);
    font-size: 30rpx;
}

.num {
    padding-left: 3px;
    color: rgb(51, 51, 51);
    font-size: 30rpx;
    font-weight: normal;
}

.like {
    width: 25px;
    height: 25px;
}

.box-line {
    height: 8px;
    background-color: rgb(238, 238, 238);
}

.ball {
    width: 45px;
    height: 45px;
    background-color: rgb(102, 201, 231);
    color: white;
    text-align: center;
    font-size: 30px;
    line-height: 45px;
    border-radius: 50%;
    position: fixed;
    right: 10px;
    bottom: 15px;
    box-shadow: -8rpx 5rpx 15rpx #cecece;
}

.null {
    width: 100%;
    margin: 15px;
    font-size: 28rpx;
    color: grey;
    text-align: center;
}