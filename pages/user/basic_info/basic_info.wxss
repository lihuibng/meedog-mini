    font: italic bold 12px/30px arial, sans-serif;
    font-size: small;
    text-align: center;
    margin: 0 auto;
}

mp-form {
    width: 100%;
    background: rgb(255, 255, 255);
}

mp-form .weui-flex .birthday {
    width: 100%;
    background: rgb(255, 255, 255);
}

