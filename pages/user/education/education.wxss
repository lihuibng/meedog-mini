/* pages/user/basic_info/basic_info.wxss */

.container {
    background: #ffffff;
    height: auto;
    overflow: hidden;
    width: 100%;
    position: relative;
}

.basic-userinfo {
    width: 100%;
    background: rgb(255, 255, 255);
}

.basic-userinfo .basic-tit {
    width: 100%;
    background: rgb(255, 255, 255);
    font: italic bold 12px/30px arial, sans-serif;
    font-size: small;
    text-align: center;
    margin: 0 auto;
}

mp-form {
    width: 100%;
    background: rgb(255, 255, 255);
}

mp-form .weui-flex .edu_sdate {
    width: 100%;
    background: rgb(255, 255, 255);
}

mp-form .weui-flex .edu_edate {
    width: 100%;
    background: rgb(255, 255, 255);
}

.weui-flex__item {
    width: 100%;
    background: rgb(255, 255, 255);
    height: 216rpx;
}

.weui-flex__item .a-input {
    width: 200rpx;
    background: rgb(255, 255, 255);
    height: 80rpx;
    display: inline-block;
    color: rgb(209, 207, 207);
}

.weui-flex .edu_sdate .edu_edate {
    background: rgb(255, 255, 255);
    display: inline-block;
    color: rgb(209, 207, 207);
}


.image-drag-container {
    padding: 10rpx 0;
    box-sizing: border-box;
}

.movable-area {
    width: 100%;
}

.image-choose-container {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.image-choose-container>view {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(248, 248, 248, 1);
    border-radius: 12rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.image-choose-container .image-item-temp {
    height: 0;
    background: transparent;
}

.image-choose-container>view image {
    width: 100%;
    height: 100%;
}

.image-choose-container>view .close {
    position: absolute;
    top: 0;
    right: 0;
    width: 32rpx;
    height: 32rpx;
    font-size: 12rpx;
    text-align: center;
    line-height: 32rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.4);
    border-radius: 50%;
}

.movable-view {
    border: 8rpx solid rgba(239, 130, 0, 1);
    border-radius: 12rpx;
    box-sizing: border-box;
}

.movable-view image {
    width: 100%;
    height: 100%;
}

.add-button {
    font-size: 20px;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.4);
}

.add-button .item {
    font-size: 20px;
    font-weight: 500;
    color: rgba(0, 0, 0, 0.4);
}

.add-button .icon {
    margin: 0 auto;
    display: block;
    height: 64rpx;
    width: 64rpx;
    margin-bottom: 16rpx;
}

.add-button .icon.add {
    background: url(http://XXXXXX:8082/icon/img/plus_blue.png) 0 0 no-repeat;
    background-size: 100%;
}
