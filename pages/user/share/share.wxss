.container {
   /* width: 100%;
    background: #f8f8f8;*/
    min-height: 100%;
    overflow-x: hidden;
    padding-top: 10rpx;
    position: relative;
}

.invitations {
    width: 100%;
    /*background: #f8f8f8;*/
    min-height: 100%;
    overflow-x: hidden;
    padding-top: 10rpx;
}

.invitation {
    text-align: center;
    /*border: 5px solid rgb(255, 255, 255);*/
}

.invitation .info {
    display: flex;
    flex-direction: row;
    height: 100%;
    position: relative;
    padding-top: 10rpx;
}

.invitation .item_hd {
    height: 64rpx;
    width: 250rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    text-align: right;
    display: block;
}

.invitation label {
    height: 64rpx;
    width: 250rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    text-align: right;
    display: block;
}

.invitation text {
    height: 64rpx;
    width: 250rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    text-align: left;
    display: block;
}
.invitation .item {
    height: 64rpx;
    width: 500rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    text-align: left;
    display: block;
}

.invite {
   /* background: #f8f8f8;*/
    min-height: 100%;
    padding-top: 1rpx;
}

.invite .item {
    float: left;
    width: 100%;
    height: 156px;
    text-align: center;
    border-radius: 25px;
}

.invite .item .a {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.invite .icon {
    margin: 0 auto;
    display: block;
    height: 52.803rpx;
    width: 52.803rpx;
    margin-bottom: 16rpx;
}

.invite .icon.add {
    background: url(http://XXXXXX:8082/icon/img/plus_blue.png) 0 0 no-repeat;
    background-size: 100%;
}
